<%- include('../partials/header') %>
<%- include('../partials/nav') %>


<!-- Delete Confirmation Page -->
<div class="container delete-container">
  <div class="card">
    <!-- Header -->
    <h1 class="delete-title">Confirm Delete</h1>
   
    <!-- Warning Box -->
    <div class="warning-box">
      <strong>⚠️ Warning!</strong>
      <span>Are you sure you want to delete this event?</span>
    </div>


    <!-- Event Details -->
    <div class="event-details">
      <p><strong>Event Title:</strong> <%= event.title %></p>
      <p><strong>Date:</strong> <%= new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
      <p><strong>Location:</strong> <%= event.location %></p>
      <% if (event.description) { %>
        <p><strong>Description:</strong> <%= event.description %></p>
      <% } %>
    </div>


    <!-- Action Buttons -->
    <div class="delete-actions">
      <!-- Cancel Button -->
      <a href="/events" class="btn btn-ghost">Cancel</a>
     
      <!-- Confirm Delete Form -->
      <form action="/events/delete/<%= event._id %>" method="POST">
        <button type="submit" class="btn btn-primary btn-danger">
          Confirm Delete
        </button>
      </form>
    </div>
  </div>
</div>


<%- include('../partials/footer') %>