<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<%- include('../partials/messages') %>

<div class="container">
  <section class="card events-card">
    
    <div class="events-header">
      <h1>Events</h1>
      <span class="badge"><%= events.length %> total</span>
    </div>
  
    <% if (events.length === 0) { %>
      <div class="empty-state">
        <i class="fas fa-calendar-times empty-icon"></i>
        <p class="empty-text">No events found.</p>
        
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/events/create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Create your first event
          </a>
        <% } else { %>
          <a href="/auth/login" class="btn btn-primary">Login to create events</a>
        <% } %>
      </div>

    <% } else { %>
      
      <table class="table" aria-describedby="events-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th class="col-actions">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(function(event) { %>
            <tr>
              <td><strong><%= event.title %></strong></td>
              <td><%= new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
              <td><%= event.location %></td>
              <td class="col-actions">
                <!-- EDIT button -->
                <% if (typeof user !== 'undefined' && user) { %>
                  <a href="/events/edit/<%= event._id %>" class="btn btn-ghost" title="Edit">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <!-- DELETE button -->
                  <a href="/events/delete/<%= event._id %>" class="btn btn-ghost delete-link" title="Delete">
                    <i class="fas fa-trash-alt"></i> Delete
                  </a>
                <% } else { %>
                  <a href="/auth/login" class="btn btn-primary btn-sm">
                    <i class="fas fa-sign-in-alt me-1"></i> Login to Edit
                  </a>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <% if (typeof user !== 'undefined' && user) { %>
        <div class="events-footer">
          <a href="/events/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Event
          </a>
        </div>
      <% } %>

    <% } %>
  </section>
</div>

<%- include('../partials/footer') %>