<!-- Full-Width Navigation Header -->
<header class="header-fullwidth">
  <div class="header-content">
    <!-- Logo Section -->
    <div class="logo">
      <a href="/">
        <img src="/Asset/images/logo.png" alt="Timely Logo">
        <span class="logo-text">Timely</span>
      </a>
    </div>
    
    <!-- Navigation Links -->
    <nav class="nav-links">
      <% if (typeof user !== 'undefined' && user) { %>
        <!-- User is LOGGED IN -->
        <a href="/" class="nav-link">
          <i class="fas fa-home"></i>
          <span>Home</span>
        </a>
        <a href="/events" class="nav-link">
          <i class="fas fa-calendar-alt"></i>
          <span>Events</span>
        </a>
        <a href="/events/create" class="nav-link">
          <i class="fas fa-plus-circle"></i>
          <span>Create Event</span>
        </a>
        <a href="/auth/logout" class="nav-link">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
        
        <!-- User Greeting -->
        <span class="user-greeting">
          <i class="fas fa-user-circle"></i>
          Hello, <%= user.username %>
        </span>
      <% } else { %>
        <!-- User is NOT logged in -->
        <a href="/" class="nav-link">
          <i class="fas fa-home"></i>
          <span>Home</span>
        </a>
        <a href="/auth/login" class="nav-link">
          <i class="fas fa-sign-in-alt"></i>
          <span>Login</span>
        </a>
        <a href="/auth/register" class="nav-link">
          <i class="fas fa-user-plus"></i>
          <span>Register</span>
        </a>
      <% } %>
    </nav>
  </div>
</header>

<div class="container">