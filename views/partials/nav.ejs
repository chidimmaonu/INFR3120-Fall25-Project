<!-- Bootstrap Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom border-success border-2 sticky-top">
  <div class="container-fluid px-4">

    <!-- Logo/Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/Asset/images/logo.png" alt="Timely Logo" 
      width="40" 
      height="40" 
      class="me-2">
      <span class="fw-bold fs-4 text-success">Timely</span>
    </a>
    
    <!-- Mobile Toggle Button -->
    <button class="navbar-toggler" 
    type="button" 
    data-bs-toggle="collapse" 
    data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <!-- Navigation Links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <% if (typeof user !== 'undefined' && user) { %>
          <!-- If USER is logged in -->
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home text-success me-1"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">
              <i class="fas fa-calendar-alt text-success me-1"></i> Events
            </a>
          </li>
          
          <!-- Change Password Link - Only for local auth users -->
          <% if (user.oauthProvider === 'local') { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/change-password">
              <i class="fas fa-key text-success me-1"></i> Change Password
            </a>
          </li>
          <% } %>
          
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">
              <i class="fas fa-sign-out-alt text-success me-1"></i> Logout
            </a>
          </li>
          <!-- USER badge with username -->
          <li class="nav-item ms-3">
            <span class="badge bg-success-subtle text-success border border-success px-3 py-2">
              <i class="fas fa-user-circle me-1"></i>
              <%= user.username %>
            </span>
          </li>
        <% } else { %>
          <!-- If no USER is logged in -->
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home text-success me-1"></i> Home
