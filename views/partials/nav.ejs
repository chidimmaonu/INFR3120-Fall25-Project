            <a class="nav-link" href="/auth/login">
              <i class="fas fa-sign-in-alt text-success me-1"></i> Login
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/register">
              <i class="fas fa-user-plus text-success me-1"></i> Register
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
