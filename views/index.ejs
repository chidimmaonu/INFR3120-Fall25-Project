<%- include('partials/header') %>
<%- include('partials/nav') %>

<!-- Hero Section - Centered Design -->
<section class="hero-centered">
  <div class="hero-content">
    <!-- Logo (circular, centered) -->
    <div class="hero-logo">
      <img src="/Asset/images/logo.png" alt="Timely Logo">
    </div>
    
    <!-- Main Heading -->
    <h1 class="hero-heading">Timely</h1>
    
    <!-- Subtitle -->
    <p class="hero-subtitle">
      Plan, list, and manage events easily.
    </p>
    
    <!-- Description -->
    <p class="hero-description">
      Want to keep track of your events?
      Timely is your go-to event management app that helps you 
      organize and stay on top of all your important dates.
    </p>
    
    <!-- Action Buttons -->
    <div class="hero-buttons">
      <% if (typeof user !== 'undefined' && user) { %>
        <!-- User is logged in -->
        <a class="btn btn-primary btn-large" href="/events">View Events</a>
        <a class="btn btn-ghost btn-large" href="/events/create">Add New Event</a>
      <% } else { %>
        <!-- User is not logged in -->
        <a class="btn btn-primary btn-large" href="/events">View Events</a>
        <a class="btn btn-ghost btn-large" href="/auth/register">Get Started</a>
      <% } %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>