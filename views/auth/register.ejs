<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<!-- Register Form Section -->
<section class="card auth-container">
  <div class="auth-header">
    <h1>Create Account</h1>
    <p>Join Timely to start managing events</p>
  </div>

  <!-- Display Flash Messages -->
  <%- include('../partials/messages') %>

  <!-- Registration Form -->
  <form action="/auth/register" method="POST" class="auth-form">
    
    <!-- Full Name Field (Optional) -->
    <div class="form-group">
      <label class="label" for="fullName">Full Name</label>
      <input 
        class="input" 
        id="fullName" 
        name="fullName" 
        type="text"
        placeholder="Enter your full name"
      >
    </div>

    <!-- Username Field -->
    <div class="form-group">
      <label class="label" for="username">Username *</label>
      <input 
        class="input" 
        id="username" 
        name="username" 
        type="text"
        required 
        minlength="3"
        placeholder="Choose a unique username"
        autofocus
      >
      <small class="input-hint">Minimum 3 characters</small>
    </div>
    
    <!-- Email Field -->
    <div class="form-group">
      <label class="label" for="email">Email *</label>
      <input 
        class="input" 
        id="email" 
        name="email" 
        type="email" 
        required
        placeholder="Enter your email address"
      >
    </div>
    
    <!-- Password Field -->
    <div class="form-group">
      <label class="label" for="password">Password *</label>
      <input 
        class="input" 
        id="password" 
        name="password" 
        type="password" 
        required
        minlength="6"
        placeholder="Create a password"
      >
      <small class="input-hint">Minimum 6 characters</small>
    </div>

    <!-- Confirm Password Field -->
    <div class="form-group">
      <label class="label" for="password2">Confirm Password *</label>
      <input 
        class="input" 
        id="password2" 
        name="password2" 
        type="password" 
        required
        minlength="6"
        placeholder="Re-enter your password"
      >
    </div>
    
    <!-- Submit Button -->
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">
        Create Account
      </button>
    </div>

    <!-- Login Link -->
    <div class="auth-footer">
      <p>Already have an account? <a href="/auth/login" class="auth-link">Log in here</a></p>
    </div>
  </form>
</section>

<%- include('../partials/footer') %>
