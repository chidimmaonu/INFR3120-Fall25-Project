<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<!-- Register Form Section -->
<div class="auth-container">
  <div class="card shadow-sm">
    <div class="card-body p-4">
      <!-- Header -->
      <div class="auth-header">
        <h1>Create Account</h1>
        <p>Join Timely to start managing events</p>
      </div>

      <!-- Display Flash Messages -->
      <%- include('../partials/messages') %>

      <!-- OAUTH BUTTONS -->
      <div class="oauth-buttons mb-3">
        <!-- Google Sign Up Button -->
        <a href="/auth/google" class="btn btn-outline-danger w-100 mb-2 oauth-btn">
          <i class="fab fa-google me-2"></i>
          Sign up with Google
        </a>

        <!-- GitHub Sign Up Button -->
        <a href="/auth/github" class="btn btn-outline-dark w-100 oauth-btn">
          <i class="fab fa-github me-2"></i>
          Sign up with GitHub
        </a>
      </div>

      <!-- Divider -->
      <div class="auth-divider">
        <span>OR</span>
      </div>

      <!-- Registration Form -->
      <form action="/auth/register" method="POST" class="auth-form">
        
        <!-- Full Name Field -->
        <div class="form-group">
          <label class="label" for="fullName">Full Name</label>
          <input 
            class="form-control" 
            id="fullName" 
            name="fullName" 
            type="text"
            placeholder="Enter your full name"
          >
        </div>

        <!-- Username Field -->
        <div class="form-group">
          <label class="label" for="username">Username *</label>
          <input 
            class="form-control" 
            id="username" 
            name="username" 
            type="text"
            required 
            minlength="3"
            placeholder="Choose a unique username"
            autofocus
          >
          <small class="form-text text-muted">Minimum 3 characters</small>
        </div>
        
        <!-- Email Field -->
        <div class="form-group">
          <label class="label" for="email">Email *</label>
          <input 
            class="form-control" 
            id="email" 
            name="email" 
            type="email" 
            required
            placeholder="Enter your email address"
          >
        </div>
        
        <!-- Password Field -->
        <div class="form-group">
          <label class="label" for="password">Password *</label>
          <input 
            class="form-control" 
            id="password" 
            name="password" 
            type="password" 
            required
            minlength="6"
            placeholder="Create a password"
          >
          <small class="form-text text-muted">Minimum 6 characters</small>
        </div>

        <!-- Confirm Password Field -->
        <div class="form-group">
          <label class="label" for="password2">Confirm Password *</label>
          <input 
            class="form-control" 
            id="password2" 
            name="password2" 
            type="password" 
            required
            minlength="6"
            placeholder="Re-enter your password"
          >
        </div>
        
        <!-- Submit Button -->
        <div class="form-group">
          <button type="submit" class="btn btn-success w-100 btn-lg">
            <i class="fas fa-user-plus me-2"></i>Create Account
          </button>
        </div>

        <!-- Login Link -->
        <div class="auth-footer">
          <p>Already have an account? <a href="/auth/login" class="auth-link">Log in here</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

